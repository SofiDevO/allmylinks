---
import SocialLinks from "./SocialLinks.astro";
import { userData } from "../data/userData.js";
---

<div class="profile__banner">
  <div id="img__container" class="img__container photo"></div>
  {
    userData.map((data) => (
      <>
        <h1>{data.userName}</h1>
        <p>{data.userDesc}</p>
      </>
    ))
  }
  <SocialLinks />
</div>

<style>
  .profile__banner {
    width: 100%;
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 22dvh;
    height: auto;
    flex-direction: column;
    padding-top: 3rem;
    gap: 0.5rem;
    h1 {
      font-size: 2.5rem;
      font-weight: 600;
      color: var(--text-bold-color);
    }
    p {
      font-size: 1.6rem;
      color: var(--button-hover);
    }
  }

  :global(.dark) .profile__banner {
    h1 {
      color: var(--secundary-color);
    }
  }

  .img__container {
    border-radius: 50%;
    border: 3px solid var(--border-color);
    width: 15rem;
    height: 15rem;
    overflow: hidden;
    background: no-repeat center center / cover;
  }

  .photo {
    background-image: url(/img/sofi_light.jpg);
  }
  :global(.dark) .photo {
    border: 3px solid aqua;
    background-image: url(/img/sofi_dark.jpg);
  }
</style>